<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kitri.emp">
	<insert id="insert" parameterType="board">
		insert into board values
		(board_seq.nextval, #{id}, sysdate, #{title}, #{content}, #{category})
	</insert>
	
	<select id="listall" resultType="board">
		select * from board order by board_no desc
	</select>
	
	<select id="read" resultType="board" parameterType="String">
		select * from board where board_no=#{board_no}	
	</select>
	
	<update id="update" parameterType="board">
		update board set title=#{title}, content=#{content}, category=#{category} where board_no=#{board_no}
	</update>
	
	<delete id="delete" parameterType="String">
		delete from board where board_no=#{board_no}
	</delete>
	
	<select id="category" resultType="board" parameterType="String">
		select * from board where category=#{category} order by board_no desc
	</select>
</mapper>
